<head>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Catamaran:300,400,100' rel='stylesheet' type='text/css'>
    <!-- This is the important part -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script> 
   
</head>         
<div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top: 30px">
    <ol class="carousel-indicators">
        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mycarousel" data-slide-to="1"></li>
        <li data-target="#mycarousel" data-slide-to="2"></li>
   
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/thewolf.jpg" style="width:100%;height:100%" />    
            <div class="carousel-caption" style="transform:translateY(-50%); transform:translateX(-60%)">
                <a href="~/Movie/Index/@Model.Movies[9].Id"><span class="glyphicon glyphicon-play-circle" style="font-size:100px"></span></a>
                
</div>      
        </div>
        <div class="item ">
            <img src="~/Content/Images/django.jpg" style="width:100%;height:100%" />
            <div class="carousel-caption" style="transform:translateY(-50%); transform:translateX(-60%)">
                <a href="~/Movie/Index/@Model.Movies[8].Id"><span class="glyphicon glyphicon-play-circle" style="font-size:100px"></span></a>
</div>
        </div>
        <div class="item ">
           
            <img src="~/Content/Images/maxmax.jpg" style="width:100%;height:100%" />
            <div class="carousel-caption" style="transform:translateY(-50%); transform:translateX(-60%)">
                <a href="~/Movie/Index/@Model.Movies[10].Id"><span class="glyphicon glyphicon-play-circle" style="font-size:100px"></span></a>
</div>
            
        </div>
    </div>
    <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
        <span class="glyphicon  glyphicon-chevron" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    <div>   
        <table class="table">

            @for (int i = 0; i < Model.Movies.Count;)
            {
                <tr align="center" style="margin:10px">
                    <td>
                        @for (int k = 0; k < 4 ; k++)
                        {
                            if (i < Model.Movies.Count)
                            {
                                <div style="width:200px; height:300px" class="grow ijhjbbj, btn-group">
                                    <a href="~/Movie/Index/@Model.Movies[i].Id"><img src=@Model.Movies[i++].ImageUrl width="150" height="250" style="margin:10px" /></a>
                                </div>
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>



